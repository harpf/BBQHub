@page
@model EmailModel
@{
    ViewData["Title"] = "E-Mail verwalten";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h1 class="text-2xl font-bold mb-4 text-orange-500">📧 E-Mail verwalten</h1>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="email-form" method="post" class="bg-zinc-800 p-6 rounded-xl shadow max-w-xl space-y-6 text-white">
    <div asp-validation-summary="All" class="text-red-400 text-sm"></div>

    <!-- Aktuelle E-Mail -->
    <div>
        <label asp-for="Email" class="block text-sm font-semibold mb-1">Aktuelle E-Mail</label>
        <div class="flex items-center gap-2">
            <input asp-for="Email" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600" disabled />
            @if (Model.IsEmailConfirmed)
            {
                <span class="text-green-400 font-semibold text-xl">✓</span>
            }
            else
            {
                <button id="email-verification"
                        type="submit"
                        asp-page-handler="SendVerificationEmail"
                        class="text-orange-400 hover:underline text-sm">
                    📤 Bestätigung erneut senden
                </button>
            }
        </div>
    </div>

    <!-- Neue E-Mail -->
    <div>
        <label asp-for="Input.NewEmail" class="block text-sm font-semibold mb-1">Neue E-Mail-Adresse</label>
        <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true"
               class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600" />
        <span asp-validation-for="Input.NewEmail" class="text-red-400 text-sm"></span>
    </div>

    <!-- Speichern -->
    <button id="change-email-button"
            type="submit"
            asp-page-handler="ChangeEmail"
            class="w-full bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg font-semibold shadow">
        💾 E-Mail ändern
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}