@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-orange-500 mb-6">Konto verwalten</h1>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- 📚 Navigation (partial) -->
        <aside class="md:col-span-1">
            <div class="bg-zinc-800 rounded-lg shadow p-4 space-y-2">
                <partial name="_ManageNav" />
            </div>
        </aside>

        <!-- 📄 Content -->
        <main class="md:col-span-3 bg-zinc-800 text-white rounded-xl shadow p-6
             [&_a]:text-orange-400 [&_a:hover]:underline
             [&_h1]:text-orange-500 [&_h2]:text-orange-400 [&_label]:text-gray-300">
            <h2 class="text-xl font-semibold mb-4">Einstellungen ändern</h2>
            <hr class="mb-6" />
            @RenderBody()
        </main>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}