@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h1 class="text-2xl font-bold mb-6 text-orange-500">🔒 Passwort ändern</h1>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post"
      class="bg-zinc-800 p-6 rounded-xl shadow max-w-xl space-y-6 text-white">

    <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

    <!-- Altes Passwort -->
    <div>
        <label asp-for="Input.OldPassword" class="block text-sm font-semibold mb-1">Aktuelles Passwort</label>
        <input asp-for="Input.OldPassword"
               class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600"
               autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.OldPassword" class="text-red-400 text-sm"></span>
    </div>

    <!-- Neues Passwort -->
    <div>
        <label asp-for="Input.NewPassword" class="block text-sm font-semibold mb-1">Neues Passwort</label>
        <input asp-for="Input.NewPassword"
               class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600"
               autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.NewPassword" class="text-red-400 text-sm"></span>
    </div>

    <!-- Bestätigung -->
    <div>
        <label asp-for="Input.ConfirmPassword" class="block text-sm font-semibold mb-1">Passwort bestätigen</label>
        <input asp-for="Input.ConfirmPassword"
               class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600"
               autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span>
    </div>

    <!-- Absenden -->
    <button type="submit"
            class="w-full bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg font-semibold shadow">
        💾 Passwort aktualisieren
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}