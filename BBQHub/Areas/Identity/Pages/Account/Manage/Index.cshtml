@page
@model IndexModel
@{
    ViewData["Title"] = "Profil bearbeiten";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h1 class="text-2xl font-bold mb-4 text-orange-500">🔥 Profil bearbeiten</h1>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post"
      class="bg-zinc-800 p-6 rounded-xl shadow max-w-xl space-y-6 text-white">
    <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

    <!-- Benutzername -->
    <div>
        <label asp-for="Username" class="block text-sm font-semibold mb-1">Benutzername</label>
        <input asp-for="Username" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600" disabled />
    </div>

    <!-- Telefonnummer -->
    <div>
        <label asp-for="Input.PhoneNumber" class="block text-sm font-semibold mb-1">Telefonnummer</label>
        <input asp-for="Input.PhoneNumber" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600" />
        <span asp-validation-for="Input.PhoneNumber" class="text-red-400 text-sm"></span>
    </div>

    <!-- Speichern -->
    <button type="submit"
            class="w-full bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg font-semibold shadow">
        💾 Änderungen speichern
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
