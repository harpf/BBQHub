@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="text-center text-red-500 mt-10">
    <h1 class="text-3xl font-bold">🚧 Es ist ein Fehler aufgetreten</h1>
    <p class="mt-4 text-lg">Bitte versuchen Sie es später erneut oder kontaktieren Sie den Support.</p>
</div>

@if (Model.ErrorMessage != null && Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    @if (Model.ErrorMessage != null)
    {
        <div class="mt-8 p-4 bg-red-100 text-red-800 rounded shadow max-w-3xl mx-auto">
            <p><strong>Fehlermeldung:</strong> @Model.ErrorMessage</p>
            <p><strong>Pfad:</strong> @Model.Path</p>
            <details class="mt-2">
                <summary class="cursor-pointer">StackTrace anzeigen</summary>
                <pre class="text-xs whitespace-pre-wrap">@Model.StackTrace</pre>
            </details>
        </div>
    }
}