@page
@model BBQHub.Pages.Admin.Events.Kriterien.CreateModel
@{
    ViewData["Title"] = "Kriterium erstellen";
}

<h1 class="text-2xl font-bold mb-4 text-orange-500">Neues Bewertungskriterium</h1>

<form method="post" class="grid gap-4 w-full max-w-xl text-black">
    <input type="hidden" asp-for="Input.DurchgangId" />

    <div>
        <label class="block text-sm font-medium">Name des Kriteriums</label>
        <input asp-for="Input.Name" class="w-full p-2 rounded border" />
    </div>

    <div>
        <label class="block text-sm font-medium">Maximale Punktzahl</label>
        <input asp-for="Input.MaxWert" type="number" class="w-full p-2 rounded border" />
    </div>

    <div>
        <label class="block text-sm font-medium">Gewichtung (z. B. 0.7)</label>
        <input asp-for="Input.Gewichtung" type="number" step="0.01" class="w-full p-2 rounded border" />
    </div>

    <div>
        <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">Speichern</button>
    </div>
</form>