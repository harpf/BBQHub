@page "{id:int}"
@model BBQHub.Pages.Admin.Events.Kriterien.EditModel
@{
    ViewData["Title"] = "Kriterium bearbeiten";
}

<h1 class="text-3xl font-bold text-orange-500 mb-6">✏️ Kriterium bearbeiten</h1>

<form method="post" class="space-y-6 max-w-2xl text-black bg-zinc-100 p-6 rounded-lg shadow-md border border-zinc-300">
    <input type="hidden" asp-for="Input.Id" />
    <input type="hidden" asp-for="Input.DurchgangId" />

    <!-- 📝 Name -->
    <div>
        <label asp-for="Input.Name" class="block text-sm font-medium text-zinc-800 mb-1">📝 Name des Kriteriums</label>
        <input asp-for="Input.Name" class="w-full p-2 rounded border border-zinc-300" />
        <span asp-validation-for="Input.Name" class="text-red-500 text-sm"></span>
    </div>

    <!-- 🔢 Max. Punkte -->
    <div>
        <label asp-for="Input.MaxWert" class="block text-sm font-medium text-zinc-800 mb-1">🔢 Maximale Punktzahl</label>
        <input asp-for="Input.MaxWert" type="number" class="w-full p-2 rounded border border-zinc-300" />
        <span asp-validation-for="Input.MaxWert" class="text-red-500 text-sm"></span>
    </div>

    <!-- ⚖️ Gewichtung -->
    <div>
        <label asp-for="Input.Gewichtung" class="block text-sm font-medium text-zinc-800 mb-1">⚖️ Gewichtung (z. B. 0.7)</label>
        <input asp-for="Input.Gewichtung" type="number" step="0.01" class="w-full p-2 rounded border border-zinc-300" />
        <span asp-validation-for="Input.Gewichtung" class="text-red-500 text-sm"></span>
    </div>

    <!-- 💾 Aktionen -->
    <div class="flex justify-between pt-4">
        <button type="submit" class="bg-orange-600 text-white px-6 py-2 rounded hover:bg-orange-700 shadow">
            💾 Speichern
        </button>

        <button type="submit"
                formaction="?handler=Delete"
                class="bg-red-600 text-white px-6 py-2 rounded hover:bg-red-700 shadow"
                onclick="return confirm('Möchtest du dieses Kriterium wirklich löschen?');">
            🗑️ Löschen
        </button>
    </div>
</form>