@page
@model BBQHub.Pages.Admin.Events.Durchgaenge.CreateModel
@{
    ViewData["Title"] = "Durchgang erstellen";
}

<h1 class="text-2xl font-bold mb-4 text-orange-500">Neuer Durchgang</h1>

<form method="post" class="grid gap-4 w-full max-w-xl text-black">
    <input type="hidden" asp-for="Input.EventId" />

    <div>
        <label class="block text-sm font-medium">Durchgangsnummer (wird automatisch gesetzt)</label>
        <input asp-for="Input.Durchgangsnummer" class="w-full p-2 rounded border bg-gray-100" readonly />
    </div>

    <div>
        <label class="block text-sm font-medium">Name des Durchgangs</label>
        <input asp-for="Input.Name" class="w-full p-2 rounded border" />
    </div>

    <div>
        <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">Speichern</button>
    </div>
</form>