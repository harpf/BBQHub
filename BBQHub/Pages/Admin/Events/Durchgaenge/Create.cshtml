@page
@model BBQHub.Pages.Admin.Events.Durchgaenge.CreateModel
@{
    ViewData["Title"] = "Durchgang erstellen";
}

<h1 class="text-3xl font-bold text-orange-500 mb-6">➕ Neuer Durchgang</h1>

<form method="post" class="space-y-6 max-w-2xl bg-zinc-100 p-6 rounded-lg shadow text-black border border-zinc-300">
    <input type="hidden" asp-for="Input.EventId" />

    <!-- 🔢 Durchgangsnummer -->
    <div>
        <label asp-for="Input.Durchgangsnummer" class="block text-sm font-medium text-zinc-800 mb-1">
            🔢 Durchgangsnummer (automatisch)
        </label>
        <input asp-for="Input.Durchgangsnummer"
               class="w-full p-2 rounded border bg-zinc-200 text-zinc-500"
               readonly />
        <span asp-validation-for="Input.Durchgangsnummer" class="text-red-500 text-sm"></span>
    </div>

    <!-- 📝 Name -->
    <div>
        <label asp-for="Input.Name" class="block text-sm font-medium text-zinc-800 mb-1">
            📝 Name des Durchgangs
        </label>
        <input asp-for="Input.Name"
               placeholder="z. B. Runde 1, Finale, Pulled Pork"
               class="w-full p-2 rounded border border-zinc-300" />
        <span asp-validation-for="Input.Name" class="text-red-500 text-sm"></span>
    </div>

    <!-- 💾 Speichern -->
    <div class="flex justify-end pt-4">
        <button type="submit"
                class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-2 rounded shadow transition">
            💾 Speichern
        </button>
    </div>
</form>
