@page "{id:int}"
@model BBQHub.Pages.Admin.EditJurorModel
@{
    ViewData["Title"] = "Juror bearbeiten";
}

<div class="min-h-screen bg-zinc-900 flex items-center justify-center px-4 py-10">
    <div class="bg-zinc-800 p-8 rounded-2xl shadow-xl w-full max-w-2xl">
        <h1 class="text-3xl font-bold mb-8 text-orange-400 text-center">Juror bearbeiten</h1>

        <form method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6 text-white" novalidate>
            <input type="hidden" asp-for="Juror.Id" />

            <div>
                <label asp-for="Juror.FirstName" class="block text-sm font-medium mb-1"></label>
                <input asp-for="Juror.FirstName" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="Juror.FirstName" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Juror.LastName" class="block text-sm font-medium mb-1"></label>
                <input asp-for="Juror.LastName" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="Juror.LastName" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Juror.JuryId" class="block text-sm font-medium mb-1"></label>
                <input asp-for="Juror.JuryId" type="number" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="Juror.JuryId" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Juror.Email" class="block text-sm font-medium mb-1"></label>
                <input asp-for="Juror.Email" type="email" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="Juror.Email" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Juror.Vereinslocation" class="block text-sm font-medium mb-1"></label>
                <select asp-for="Juror.Vereinslocation" class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500">
                    <option value="">Bitte auswählen</option>
                    @foreach (var country in Model.AvailableCountries)
                    {
                        <option value="@country">@country</option>
                    }
                </select>
                <span asp-validation-for="Juror.Vereinslocation" class="text-red-400 text-sm"></span>
            </div>

            <div>
                <label asp-for="Juror.Telefonnummer" class="block text-sm font-medium mb-1">Telefonnummer</label>
                <input asp-for="Juror.Telefonnummer" type="tel" placeholder="z. B. +41 79 123 45 67"
                       class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white shadow-sm focus:ring-2 focus:ring-orange-500" />
                <span asp-validation-for="Juror.Telefonnummer" class="text-red-400 text-sm"></span>
            </div>

            <div class="md:col-span-2 text-right">
                <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold shadow-md">
                    Speichern
                </button>
            </div>
        </form>
    </div>
</div>
