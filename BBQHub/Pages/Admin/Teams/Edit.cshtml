@page "{id}"
@model BBQHub.Pages.Admin.Teams.EditModel
@{
    ViewData["Title"] = "Team bearbeiten";
}

<h1 class="text-2xl font-bold text-orange-500 mb-4">Team bearbeiten</h1>

<form method="post" class="space-y-4 text-black max-w-xl">
    <input type="hidden" asp-for="Input.Id" />

    <div>
        <label class="block text-sm font-medium">Teamname</label>
        <input asp-for="Input.Name" class="w-full p-2 rounded border" />
    </div>

    <div>
        <label class="block text-sm font-medium">Ansprechpartner</label>
        <input asp-for="Input.Ansprechpartner" class="w-full p-2 rounded border" />
    </div>

    <div>
        <label class="block text-sm font-medium">Kontakt</label>
        <input asp-for="Input.KontaktEmail" class="w-full p-2 rounded border" />
    </div>

    <div class="flex justify-between">
        <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
            Speichern
        </button>
