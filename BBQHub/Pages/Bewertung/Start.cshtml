@page
@model BBQHub.Pages.Bewertung.StartModel
@{
    ViewData["Title"] = "Juror Teilnahme";
}
<div class="flex justify-center items-center min-h-screen bg-zinc-900 px-4">
    <div class="bg-zinc-800 p-8 rounded-2xl shadow-lg w-full max-w-md border border-zinc-700">
        <h1 class="text-3xl font-bold text-orange-400 mb-6 text-center drop-shadow">Am Wettbewerb teilnehmen</h1>

        <form method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div>
                <label class="block text-sm font-semibold mb-2 text-white">Bitte Juror-ID eingeben:</label>
                <input asp-for="JuryId" type="number"
                       class="w-full p-3 rounded-lg bg-zinc-700 border border-zinc-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 shadow-sm"
                       placeholder="z. B. 12345" />
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="text-red-400 text-sm">@Model.ErrorMessage</div>
            }

            <button type="submit"
                    class="w-full bg-orange-600 text-white py-2.5 rounded-lg hover:bg-orange-700 transition duration-200 shadow-md font-semibold">
                Weiter
            </button>
        </form>
    </div>
</div>
