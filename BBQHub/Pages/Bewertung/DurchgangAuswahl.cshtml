@page
@model BBQHub.Pages.Bewertung.DurchgangAuswahlModel
@{
    ViewData["Title"] = "Durchgang wählen";
}

<h1 class="text-2xl font-bold text-orange-500 mb-6">Wähle einen Durchgang</h1>

<p class="text-gray-300 mb-2">Juror-ID: <strong>@Model.JuryId</strong></p>
<p class="text-gray-300 mb-6">Event: <strong>@Model.EventName</strong></p>

@if (!Model.Durchgaenge.Any())
{
    <div class="text-red-400">Für dieses Event wurden noch keine Durchgänge hinterlegt.</div>
}
else
{
    <ul class="space-y-4">
        @foreach (var d in Model.Durchgaenge)
        {
            <li class="bg-zinc-800 p-4 rounded shadow text-white flex justify-between items-center">
                <div>
                    <h2 class="text-lg font-semibold">Durchgang @d.Durchgangsnummer: @d.Name</h2>
                </div>
                <a asp-page="/Bewertung/Formular"
                   asp-route-juryId="@Model.JuryId"
                   asp-route-durchgangId="@d.Id"
                   asp-route-eventId="@Model.EventId"
                   class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
                    Bewerten
                </a>
            </li>
        }
    </ul>
}