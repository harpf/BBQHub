@page "{eventId:int}"
@model BBQHub.Pages.Teilnahme.RegistrierenModel
@{
    ViewData["Title"] = "Spontane Teilnahme";
}

<h1 class="text-2xl font-bold mb-6 text-orange-500">Spontane Teilnahme – @Model.EventName</h1>

@if (Model.Durchgaenge.Any())
{
    <form method="post" class="space-y-4 max-w-xl text-black">
        <input type="hidden" asp-for="EventId" />

        <div>
            <label class="block text-sm font-medium">Name des Teilnehmers</label>
            <input asp-for="TeilnehmerName" class="w-full p-2 rounded border" required />
        </div>

        <div>
            <label class="block text-sm font-medium">Straße</label>
            <input asp-for="Street" class="w-full p-2 rounded border" required />
        </div>

        <div>
            <label class="block text-sm font-medium">PLZ</label>
            <input asp-for="ZipCode" class="w-full p-2 rounded border" required />
        </div>

        <div>
            <label class="block text-sm font-medium">Ort</label>
            <input asp-for="City" class="w-full p-2 rounded border" required />
        </div>

        <div>
            <label class="block text-sm font-medium">Land</label>
            <input asp-for="Country" class="w-full p-2 rounded border" value="CH" required />
        </div>

        <div>
            <label class="block text-sm font-medium">E-Mail</label>
            <input asp-for="Email" class="w-full p-2 rounded border" type="email" required />
        </div>

        <div>
            <label class="block text-sm font-medium">Telefonnummer</label>
            <input asp-for="Telefonnummer" class="w-full p-2 rounded border" required />
        </div>

        <div>
            <label class="block text-sm font-medium">Durchgang wählen</label>
            <select asp-for="SelectedDurchgangId" asp-items="Model.Durchgaenge" class="w-full p-2 rounded border" required></select>
        </div>

        <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
            ➕ Jetzt registrieren
        </button>
    </form>
}
else
{
    <p class="text-gray-300">Für dieses Event sind aktuell keine Durchgänge verfügbar.</p>
}
