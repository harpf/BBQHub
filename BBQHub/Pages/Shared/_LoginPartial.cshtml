@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex flex-col md:flex-row items-center gap-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="text-white hover:underline" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                👋 Hallo @User.Identity?.Name!
            </a>
        </li>
        <li>
            <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                <button type="submit" class="text-white hover:underline">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="text-white hover:underline" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="text-white hover:underline" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
