@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var user = User;
    var isAdmin = user.IsInRole("Admin");
    var isOrganizer = user.IsInRole("EventOrganizer");
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BBQHub</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BBQHub.styles.css" asp-append-version="true" />
</head>
<body class="bg-zinc-900 text-white min-h-screen flex flex-col">
    <header class="bg-gradient-to-r from-red-800 to-orange-600 shadow-lg">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a class="text-2xl font-bold tracking-wide text-white" asp-area="" asp-page="/Index">
                🔥 BBQHub
            </a>

            <button id="menu-toggle" class="md:hidden text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <nav id="menu" class="hidden md:flex flex-col md:flex-row gap-4 md:items-center text-white font-medium">
                <a class="hover:underline" asp-page="/Index">Home</a>

                @if (SignInManager.IsSignedIn(User) && isAdmin)
                {
                    <a class="hover:underline" asp-page="/Admin/Juroren">Juroren</a>
                }

                @if (SignInManager.IsSignedIn(User) && (isAdmin || isOrganizer))
                {
                    <a class="hover:underline" asp-page="/Admin/Events/Index">🎉 Events</a>
                    <a class="hover:underline" asp-page="/Admin/Teams/Index">🔧 Teams</a>
                    <a class="hover:underline" asp-page="/Admin/Events/Monitor">📊 Monitoring</a>
                    <a class="hover:underline" asp-page="/Ranglisten/Index">🏆 Ranglisten</a>
                }

                <a class="hover:underline" asp-page="/Privacy">Privacy</a>
                <partial name="_LoginPartial" />
            </nav>
        </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-zinc-800 text-center py-4 text-sm text-gray-400">
        &copy; 2025 - BBQHub · <a asp-page="/Privacy" class="underline text-orange-400">Datenschutz</a>
    </footer>

    <script>
        // Mobile Menü-Toggle
        const toggle = document.getElementById('menu-toggle');
        const menu = document.getElementById('menu');
        toggle.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
